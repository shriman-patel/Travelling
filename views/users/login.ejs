<body>
  <div class="row mt-3">
    <div class="col-6 offset-2">
         <h1>Login</h1>
      <form method="POST" action="/login" novalidate class="needs-validation">
        <div class="mb-3">
          <lable for="username" class="form-label">Username</lable>
          <input
            name="username"
            id="username"
            type="text"
            class="form-control"
            required
          />
        </div>

         <div class="mb-3">
          <lable for="password" class="form-label">Password</lable>
          <input
            name="password"
            id="password"
            type="password"
            class="form-control"
            required
          />
        </div>
        <button class="btn btn-success">Login</button>
      </form>
    </div>
  </div>
</body>
